// Suma usando ciclo (complejidad: O(n))
int sumaIterativa(int n) {
    int total = 0; 
    for (int i = 1; i <= n; i++) {
        total += i;
    }
    return total;
}

// Suma usando recursividad (complejidad: O(n))
int sumaRecursiva(int n) {
    if (n == 0) return 0;
    return n + sumaRecursiva(n - 1);
}

// Suma directa con fórmula matemática (complejidad: O(1))
int sumaDirecta(int n) {
    // Fórmula de Gauss jordan para sumatorias: n(n+1)/2
    return n * (n + 1) / 2;
}
